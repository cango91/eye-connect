<%- include('./partials/header') %>
<%- include('./partials/navigation') %>
<%- include('./partials/policyPopup') %>
<main class="container mt-5 py-4 bg-light shadow-lg rounded">
    <div class="text-center">
      <h2>Login to eyeConnect Portal</h2>
    </div>
    <div class="container-fluid">
      <form role="form" action="/portal/login" method="post">
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input type="email" autocomplete="email" class="form-control" id="email" name="email" required>
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input type="password" autocomplete="current-password" class="form-control" id="password" name="password" required>
        </div>
        <div class="mb-3 d-flex justify-content-end">
          <button type="submit" class="btn btn-primary">Login</button>
        </div>
        <div class="d-flex justify-content-between">
          <a href="/portal/forgot-password">Forgot password?</a>
          <a href="/portal/signup">Signup</a>
        </div>
      </form>
      <form role="form" action="/portal/login/oauth/google" method="get">
        <div class="mt-3">
            <button type="submit" class="btn btn-outline-secondary d-block mx-auto">
              <img src="/images/google_logo.svg" alt="Google Logo" class="me-2">
              Login with Google
            </button>
          </div>
      </form>
    </div>
  </main>
<%- include('./partials/footer') %>